{% extends 'base.html.twig' %}

{% block title %}Music{% endblock %}

{% block body %}
    <a href="{{ path('app_profil') }}" class="btn btn-dark mb-3"><i class="align-middle" data-feather="arrow-left-circle"></i></a>
    <div class="d-flex flex-wrap justify-content-between align-items-center">
		<h1>Music</h1>
        {{ include('artist_music/_delete_form.html.twig') }}
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ music.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ music.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ music.description }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ music.author }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{{ music.imageName }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ music.slug }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ music.updatedAt ? music.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Length</th>
                <td>{{ music.length ? music.length|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>AudioName</th>
                <td>{{ music.audioName }}</td>
            </tr>
        </tbody>
    </table>

	<a href="{{ path('app_artist_music_edit', {'id': music.id}) }}" class="btn btn-success"><i class="align-middle" data-feather="edit-2"></i></a>
{% endblock %}