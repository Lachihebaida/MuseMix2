{% extends 'base-backend.html.twig' %}

{% block title %}Music{% endblock %}

{% block body %}
    <h1>Music</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ music.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ music.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ music.description }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ music.author }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{{ music.imageName }}</td>
            </tr>
            <tr>
                <th>Nom d'audio</th>
                <td>{{ music.audioName }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ music.slug }}</td>
            </tr>
            <th>Category</th>
                <td>{{ music.category }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_music_index') }}" class="btn btn-dark">Retour</a>

    <a href="{{ path('app_admin_music_edit', {'id': music.id}) }}" class="btn btn-success"><i class="align-middle" data-feather="edit-2"></i></a>

    {{ include('admin_music/_delete_form.html.twig') }}
{% endblock %}
