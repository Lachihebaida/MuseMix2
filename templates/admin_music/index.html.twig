{% extends 'base-backend.html.twig' %}

{% block title %}Music index{% endblock %}

{% block body %}
    <h1>Music index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Author</th>
                <th>ImageName</th>
                <th>AudioFile</th>
                <th>Slug</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for music in music %}
            <tr>
                <td>{{ music.id }}</td>
                <td>{{ music.title }}</td>
                <td>{{ music.description }}</td>
                <td>{{ music.author }}</td>
                <td>{{ music.imageName }}</td>
                <td>{{ music.audioFile }}</td>
                <td>{{ music.slug }}</td>
                <td>
                    <a href="{{ path('app_admin_music_show', {'id': music.id}) }}">show</a>
                    <a href="{{ path('app_admin_music_edit', {'id': music.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_music_new') }}">Create new</a>
{% endblock %}
