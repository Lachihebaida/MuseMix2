{% extends 'base.html.twig' %}
{% block stylesheets %}
{% endblock %}
{% block title %}
    Nos catégories
{% endblock %}
{% block body %}
    <h1 class="mb-3">Toutes les catégories</h1>

    <div class="row">
        {% for category in category %}
        <div class=" col-6 col-sm-6 col-md-3 col-lg-3 mb-3">
            <div class="card mb-3" >
                <div class="row g-0">
                    <div class="col-md-4">
                        <a href="{{ path('app_category_show', {slug: category.slug}) }}">
                            <img src="{{ asset('/images/categories/' ~ category.imageName) }}" class="img-fluid rounded-start" alt="{{ category.name }}" style="height: 100px ">
                        </a>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="{{ path('app_category_show', {slug: category.slug}) }}" class="text-dark">{{ category.name }}</a>
                            </h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
{% endblock %}